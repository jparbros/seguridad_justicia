.page-header
  = link_to 'Crear Representante', new_admin_representative_path, class: 'btn pull-right'
  %h2
    Representantes

%ul{class: ['list', 'sortable', 'ui-sortable']}
  - @representatives.each do |representative|
    %li{id: 'representative_#{representative.id}'}
      .item
        .icon
        .btn-group
          = link_to 'Posturas', admin_representative_stances_path(representative), class: ['btn', 'btn-small']
          = link_to 'Editar', edit_admin_representative_path(representative), class: ['btn', 'btn-small']
          = link_to 'Eliminar', admin_representative_path(representative), method: :delete, confirm: 'Â¿Esta seguro de eliminar el representante?', class: ['btn', 'btn-small', 'btn-danger']
        .item-content
          .item-title= representative.name
          .label= representative.election.name if representative.election
