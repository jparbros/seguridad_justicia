.form_element.select_element
  .label
    %label
      Nombre
  .value
    = form.text_field :name

.form_element.text_field_element
  .label
    %label
      Partido Politico y/o Alianza
  .value
    = form.select :political_party_id, PoliticalParty.by_site(@site.id).collect {|p| [ p.name, p.id ]}, include_blank: true

.form_element.select_element
  .label
    %label
      Distrito
  .value
    = form.text_field :district

.form_element.select_element
  .label
    %label
      Circumscripcion
  .value
    = form.text_field :circumscription


.form_element.text_field_element
  .label
    %label
      Puesto
  .value
    = form.select :position, [['Diputado local','diputado_local'],['Diputado federal','diputado_federal'],['Senador','senador'],['Presidente Municipal','presidente_municipal']], include_blank: true

.form_element.text_field_element
  .label
    %label
      Tipo de representacion (solo senadores)
  .value
    = form.select :representation_type, [['Mayoría Relativa','mayoría relativa'],['1ra Minoría','1ra minoría'],['Plurinominal','plurinominal']], include_blank: true

.form_element.text_field_element
  .label
    %label
      Genero:
  .value
    = form.select :gender, [['Femenino','f'],['Masculino','m']], include_blank: true


.form_element.select_element
  .label
    %label
      Email
  .value
    = form.text_field :email

.form_element.select_element
  .label
    %label
      Twitter
  .value
    = form.text_field :twitter

.form_element.select_element
  .label
    %label
      Facebook
  .value
    = form.text_field :facebook

.form_element.select_element
  .label
    %label
      Telefono
  .value
    = form.text_field :phone

.form_element.select_element
  .label
    %label
      Fecha de nacimiento
  .value
    = form.text_field :birthday


.form_element.select_element
  .label
    %label
      Imagen
  .value
    = form.file_field :avatar

.form_element.select_element
  .label
    %label
      Substituto
  .value
    = form.text_field :substitute

.form_element.select_element
  .label
    %label
      Comisiones
  .value
    = form.text_field :comissions

.form_element.select_element
  .label
    %label
      Seccion
  .value
    = form.text_field :section

.form_element.select_element
  .label
    %label
      Oficina de enlace
  .value
    = form.text_field :office

.form_element.select_element
  .label
    %label
      Biografia
  .value
    = form.text_area :biography, class: :rich_text

.form_element.submit_element
  .label
  .value
    = form.submit (@representative.new_record? ? 'Crear' : 'Editar')