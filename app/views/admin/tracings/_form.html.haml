.form_element.select_element
  .label
    %label
      Titulo
  .value
    = form.text_field :title

.form_element.select_element
  .label
    %label
      Tema
  .value
    = form.text_field :topic_tokens, data: {load: @tracing.json_topics}

.form_element.select_element
  .label
    %label
      Tipo de seguimiento
  .value
    = form.select :document_kind, ['prevenci√≥n','seguridad','justicia'], include_blank: true
    = form.text_field :document_kind_text

.form_element.select_element
  .label
    %label
      Contenido
  .value
    = form.text_area :content, class: :rich_text

.form_element.submit_element
  .label
  .value
    = form.submit (@tracing.new_record? ? 'Crear' : 'Editar')
    
%script{type: "text/javascript"}
  $('#tracing_topic_tokens').tokenInput('/admin/document_topics.json', {prePopulate: $('#tracing_topic_tokens').data('load')}) 