#main-content.span8
  #content

    %h2= @postura.title

    .news-content
      .details
        .news-topic
          %span.detail-label Tema(s):
          - @postura.topics.each do |topic|
            %span.label.label-info
              = topic.name

        .news-date
          %span.detail-label Fecha:
          = @postura.created_at.to_date
          
        .back-buton
          = link_to 'Regresar', representante_posturas_path(@postura.representative)

      = @postura.content.html_safe

= render partial: 'common/right_column'