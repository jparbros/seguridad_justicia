#main-content.span8
  #content

    %h2= @news.title

    .news-content
      .details
        .news-topic
          %span.detail-label Tema(s):
          - @news.topic.split(',').each do |topic|
            %span.label.label-info
              = topic

        .news-date
          %span.detail-label Fecha:
          = @news.date.to_date

      = @news.content.html_safe

