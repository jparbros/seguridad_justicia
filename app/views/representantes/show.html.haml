#main-content.span8
  #content
    .seguimiento.phase-header
      %h2
        %div.sigueles-title
          = image_tag @representante.political_party.logo.thumb
          %span
            = @representante.political_party.initials
        = @representante.name.titleize
        (#{@representante.position.humanize})

    .row.profile
      .span3.well
        = image_tag @representante.avatar.blank? ? '/assets/user.png' : @representante.avatar.thumb
        %ul#profileTab.nav.nav-tabs.nav-stacked
          %li.active
            %a{'data-toggle' =>"tab", :href => '#informacion'}
              Informaci&oacute;n
              %i.icon-chevron-right
          %li
            %a{'data-toggle' =>"tab", :href => '#biografia'}
              Biograf&iacute;a
              %i.icon-chevron-right
          %li
            %a{'data-toggle' =>"tab", :href => '#twitter'}
              Twitter
              %i.icon-chevron-right

      .tab-content.span4.well
        #informacion.tab-pane.active

          %p
            %span.one-line
              Partido Politico:

            = image_tag @representante.political_party.logo.thumb, class: :thumb

            = @representante.political_party.name

          %p
            %span
              Email:
            - if @representante.email
              = @representante.email
            - else
              Todavia no se cuenta con la direcci&oacute;n de correo electronico.

          %p
            %span
              Distrito:
            - if @representante.district
              = @representante.district
            - else
              Distrito no disponible.

          %p
            %span
              Circunscripción:
            - if @representante.circumscription
              = @representante.circumscription
            - else
              Circunscripción no esta disponible.


          %p
            %span
              Telefono:
            - if @representante.phone
              = @representante.phone
            - else
              Telefono no disponible.

          %p
            %span
              Sustituto:
            - if @representante.substitute
              = @representante.substitute
            - else
              Sustituo no disponible.


          %p
            %span
              Comisiones:
            - if @representante.comissions
              - @representante.comissions.split(',').each do |commission|
                %span.label.label-info
                  = commission
            - else
              Comisiones no disponibles.

        #biografia.tab-pane
          - if @representante.biography
            = @representante.biography
          - else
            Biografia no disponible.

        #twitter.tab-pane
          - if @representante.twitter.blank?
            Cuenta de twitter no disponible
    %h2
      Postura sobre Seguridad y Justicia
    - @posturas.each do |postura|
      
      .postura      
        .postura-created-at.tooltip.bottom.in
          .tooltip-arrow
          .tooltip-inner
            = postura.created_at.to_date.to_s :short
        .postura-content
          %h4
            = postura.title
      
          = postura.first_paragraph.html_safe
          
          = link_to 'Leer mas...', representante_postura_path(postura.representative, postura)

= render partial: 'common/right_column'


:javascript
  $('#profileTab a').click(function (e) {
    e.preventDefault();
    $(this).tab('show');
  })

  $("#twitter").tweet({
  username: "#{@representante.twitter}",
  count: 5,
  loading_text: "cargando tweets...",
  template: "{text}"
  });