#main-content.span8
  #content

    %h2= @seguimiento.title

    .news-content
      .details
        .news-topic
          %span.detail-label Tema(s):
          - @seguimiento.topics.each do |topic|
            %span.label.label-info
              = topic.name

        .news-date
          %span.detail-label Fecha:
          = @seguimiento.created_at.to_date
          
        .back-buton
          = link_to 'Regresar', representante_seguimientos_path(@seguimiento.representative)

      = @seguimiento.content.html_safe

= render partial: 'common/right_column'