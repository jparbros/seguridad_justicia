.section-post-container
  %h2
    = (params[:tipo] || @topic.name).humanize

- @seguimientos.each do |seguimiento|
      
  .postura      
    .postura-created-at.tooltip.bottom.in
      .tooltip-arrow
      .tooltip-inner
        = seguimiento.published_date.to_date.to_s :short
    .postura-content
      %h4
        = seguimiento.title
      
      = seguimiento.first_paragraph.html_safe
          
      = link_to 'Leer mas...', seguimiento_path(seguimiento)       